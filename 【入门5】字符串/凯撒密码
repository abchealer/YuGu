#include <iostream>
using namespace std;
int n;
char s[51];
int main(){
    cin>>n>>s;
    for(int i=0;s[i]!='\0';i++){
        printf("%c", (s[i]-'a'+n)%26+'a');
    }
    
    
    
    return  0;
}
 
